@{ Layout = null; }
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>Acceso Privado | Pulpería Doña Reyna</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root { --midnight: #0f172a; --gold: #d4af37; }
        body { background: var(--midnight); font-family: 'Plus Jakarta Sans', sans-serif; height: 100vh; display: flex; align-items: center; }
        .login-card { background: rgba(255,255,255,0.03); backdrop-filter: blur(10px); border: 1px solid rgba(212,175,55,0.2); border-radius: 20px; padding: 40px; width: 100%; max-width: 400px; margin: auto; }
        .gold-text { color: var(--gold); }
        .form-control { background: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.1); color: white; border-radius: 10px; padding: 12px; }
        .form-control:focus { background: rgba(255,255,255,0.15); color: white; border-color: var(--gold); box-shadow: none; }
        .btn-gold { background: linear-gradient(135deg, #d4af37, #f1d27b); color: var(--midnight); font-weight: 800; border: none; border-radius: 10px; padding: 12px; transition: 0.3s; }
        .btn-gold:hover { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(212,175,55,0.3); }
        .input-group-text { background: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.1); color: var(--gold); cursor: pointer; }
    </style>
</head>
<body>
    <div class="login-card text-center shadow-lg">
        <img src="~/img/site/Logo.png" style="max-height: 80px; filter: brightness(0) invert(1);" class="mb-4">
        <h4 class="gold-text fw-bold mb-4">ACCESO PRIVADO</h4>
        
        <div id="loginForm">
            <div class="mb-3 text-start">
                <label class="text-white-50 small mb-2">Correo o Usuario</label>
                <input type="text" id="email" class="form-control" placeholder="nombre@ejemplo.com">
            </div>

            <div class="mb-4 text-start d-none" id="passContainer">
                <label class="text-white-50 small mb-2">Contraseña</label>
                <div class="input-group">
                    <input type="password" id="password" class="form-control">
                    <span class="input-group-text" onclick="togglePass()"><i class="bi bi-eye" id="toggleIcon"></i></span>
                </div>
            </div>

            <button class="btn btn-gold w-100 mb-3" onclick="handleLogin()" id="btnAction">Continuar</button>
            <a href="/" class="text-white-50 small text-decoration-none"><i class="bi bi-arrow-left"></i> Volver al Inicio</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        let step = 1;

        function togglePass() {
            const input = document.getElementById('password');
            const icon = document.getElementById('toggleIcon');
            if (input.type === "password") {
                input.type = "text";
                icon.classList.replace('bi-eye', 'bi-eye-slash');
            } else {
                input.type = "password";
                icon.classList.replace('bi-eye-slash', 'bi-eye');
            }
        }

        async function handleLogin() {
            const email = $('#email').val();
            if(!email) return;

            // Modal de carga minimalista
            Swal.fire({ title: 'Procesando...', allowOutsideClick: false, didOpen: () => { Swal.showLoading(); } });

            if (step === 1) {
                // Validación de usuario existente
                $.get(`/Account/ValidarUsuario?email=${email}`, function(res) {
                    Swal.close();
                    if (res.existe) {
                        $('#passContainer').removeClass('d-none');
                        $('#email').attr('readonly', true);
                        $('#btnAction').text('Iniciar Sesión');
                        step = 2;
                    } else {
                        Swal.fire({ icon: 'error', title: 'No autorizado', text: 'Usuario no encontrado en Sistema, verifique su cuenta con el adminsitrador.', confirmButtonColor: '#d4af37' });
                    }
                });
            } else {
                // Intento de Login
                const pass = $('#password').val();
                $.post('/Account/Login', { email: email, password: pass }, function(res) {
                    if (res.success) {
                        Swal.fire({ 
                            icon: 'success', 
                            title: `¡Bienvenido, ${res.user}!`,
                            text: `Acceso concedido como: ${res.role}`,
                            timer: 2000, showConfirmButton: false 
                        }).then(() => { window.location.href = '/'; });
                    } else {
                        Swal.fire({ icon: 'error', title: 'Error', text: res.message, confirmButtonColor: '#d4af37' });
                    }
                });
            }
        }
    </script>
</body>
</html>